<h1>TeenyURL</h1>

<form id="url" action="/" method="post">
  <input type="url" placeholder="http://" name="url" />
  <button id="add" type="submit">+</button>
</form>

<% for link in @links %>
  <div class="link">
    <span class="column url">
      <a href="<%= link.url %>" target="_blank">
        <%= link.url %>
      </a>
    </span>

    <span class="column url">
      <a href="<%= url("/#{link.slug}") %>" target="_blank">
        <%= url("/#{link.slug}") %>
      </a>
    </span>

    <span class="column count">
      <%= link.count %> Visits
    </span>

    <span class="column action">
      <form action="/<%= link.slug %>" method="post" style="display: inline-block;">
        <input type="hidden" name="_method" value="delete" />
        <button id="destroy" type="submit">&times;</button>
      </form>
    </span>
  </div>
<% end %>
